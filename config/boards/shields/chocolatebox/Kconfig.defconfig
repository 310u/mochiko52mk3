if CHOCOLATEBOX

config ZMK_KEYBOARD_NAME
    default "chocolatebox"

config ZMK_MOUSE
    default y

config ZMK_MOUSE_PMW3610
    default y

config ZMK_DISPLAY
    default y

config ZMK_KSCAN
    default y

config ZMK_KSCAN_GPIO_MATRIX
    default y

# バッテリー駆動のための省電力設定
config ZMK_IDLE_TIMEOUT
    default 30000  # 30秒でスリープ

config ZMK_IDLE_POWERDOWN
    default y

# ディスプレイのスリープ設定（省電力用）
config ZMK_DISPLAY_TIMEOUT
    default 5000  # 5秒でディスプレイOFF
    
if ZMK_DISPLAY

config I2C
        default y

config SSD1306
        default y

config SSD1306_REVERSE_MODE
        default y

endif # ZMK_DISPLAY


